#include "AFMotor.h" // sheild library
AF_DCMotor M1 (1 , MOTOR12_1KHZ);
AF_DCMotor M2 ( 2 , MOTOR12_1KHZ);
#define MIN_PWM 64
#define MAX_PWM 128
int Mega_signal = 9; // awaking digital signal from Mega anology output function
int Arduino = 8;

void setup() 
{
     M1.setSpeed (200);
     M2.setSpeed (200); 
     Serial.begin(9600);
     pinMode ( Mega_signal , INPUT );
     pinMode ( Arduino , OUTPUT) ;
     Serial.println ( " Stider Etch Sketch Control Software " ); 
}

void loop() 

{

        Serial.print( "tick " ) ;
        M1.run(FORWARD);
        delay (2000);
        
        Serial.print ( " Tock nigga" );
        M1.run(BACKWARD);
        delay ( 1000) ;
        
        Serial.print( "tick " ) ;
        M2.run(FORWARD);
        delay (4000);
        
        Serial.print ( " Tock nigga" );
        M1.run(BACKWARD);
        delay (2000);
        
        Serial.print( "tick " ) ;
        M1.run(FORWARD);
        delay (4000);
        
        Serial.print( "tick " ) ;
        M1.run(FORWARD);
        delay (3000);
        
        Serial.print ( " Tock nigga" );
        M1.run(BACKWARD);
        delay(2000);
        
        Serial.print ( " Tock nigga" );
