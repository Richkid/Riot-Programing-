        delay(4000);
        
        Serial.print( "tick " ) ;
        M1.run(FORWARD);
        delay (2000);
        
        Serial.print ( " Tock nigga" );
        M1.run(BACKWARD);
        delay(2000);
        
        Serial.print ( " Tock nigga" );
        M2.run(BACKWARD);
        delay(2000);
        
        Serial.print( "tick " ) ;
        M1.run(FORWARD);
        delay(2000);
        
        Serial.print( "tick " ) ;
        M1.run(FORWARD);
        delay(3000);
        
        Serial.print( "tick " ) ;
        M2.run(FORWARD);
        delay(2000);
        
        Serial.print( "tick " ) ;
        M1.run(FORWARD);
        delay(2000);
        
        Serial.print ( " Tock nigga" );
        M1.run(BACKWARD);
        delay(2000);
        
        Serial.print ( " Tock nigga" );
        M2.run(BACKWARD);
        delay(4000);
        
        Serial.print( "tick " ) ;
        M1.run(FORWARD);
        delay(4000);
        
        Serial.print ( " Tock nigga" );
        M1.run(BACKWARD);
        delay(2000);
        
        Serial.print( "tick " ) ;
